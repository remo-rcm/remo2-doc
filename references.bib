@Article{Marengo2008,
  Title                    = {The Drought of Amazonia in 2005},
  Author                   = {Marengo, José A. and Nobre, Carlos A. and Tomasella, Javier and Oyama, Marcos D. and Sampaio de Oliveira, Gilvan and de Oliveira, Rafael and Camargo, Helio and Alves, Lincoln M. and Brown, I. Foster},
