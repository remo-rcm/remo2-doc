  Keywords                 = {climate change},
  Timestamp                = {2011.09.16},
  Url                      = {http://www.sciencedirect.com/science/article/pii/S0140196300906992}
}

@Article{Mauritsen2012,
  Title                    = {Tuning the climate of a global model},
